## ---------------------------------------------------------
                <div class="row mt-3">
                    <div class="col align-self-start">
                        <button class="btn btn-outline-secondary mr-2" *ngIf="sub" (click)="onClickCancel()">
                            <i class="fas fa-times"></i> Cancelar
                        </button>
    
                        <button class="btn btn-primary mr-2" (click)="onClickSave()" [disabled]="!${entity.model.var}Form.form.valid && viewMode">
                            <i class="fas fa-check"></i> Salvar
                        </button>
                        <button class="btn btn-outline-secondary mr-2" *ngIf="!sub" (click)="onClickBack()">
                                <i class="fas fa-chevron-left"></i> Voltar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
