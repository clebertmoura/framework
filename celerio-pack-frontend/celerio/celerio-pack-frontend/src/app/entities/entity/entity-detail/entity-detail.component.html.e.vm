## -- [MACRO]
#macro(xToOneEdit $relation)

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <app-${relation.toEntity.model.type.toLowerCase()}-autocomplete [dropdown]="true" [(ngModel)]="entity.${relation.to.var}" id="$relation.to.var"
                            name="$relation.to.var" label="${relation.labels.label}" displayfield="${relation.toEntity.printerAttributes.flatUp.list.get(0).var}"
                            [disabled]="viewMode">
                        </app-${relation.toEntity.model.type.toLowerCase()}-autocomplete>
                    </div>
                </div>
                #if($relation.isMandatory())
                <!--
                <div class="text-danger mt-1" *ngIf="!${relation.to.var}.valid && ${relation.to.var}.dirty && ${relation.to.var}.errors['required']">
                    $relation.labels.label é obrigatório.
                </div>
                -->
                #end
#end
#macro(required $attribute)
#if($attribute.isRequired()) required #end
#end
#macro(minlength $attribute)
#if($attribute.columnConfig.hasMin()) minlength="$attribute.columnConfig.min"#end
#end
#macro(maxlength $attribute)
#if($attribute.columnConfig.getSize() > 0) maxlength="$attribute.columnConfig.size"#end
#end
#macro(requiredclass $attribute)
#if($attribute.isRequired()) class="required"#end
#end
#macro(mderror $attribute)

#if($attribute.isRequired())
                    <div class="text-danger mt-1" *ngIf="!${attribute.var}.valid && ${attribute.var}.dirty && ${attribute.var}.errors['required']">
                        $attribute.labels.label é obrigatório.
                    </div>
#end
#if($attribute.columnConfig.hasMin() && $attribute.isString())
                    <div class="text-danger mt-1" *ngIf="!${attribute.var}.valid && ${attribute.var}.dirty && ${attribute.var}.errors['minlength']">
                        $attribute.labels.label deve conter no mínimo $attribute.columnConfig.min caractere(s).
                    </div>
#end
#if($attribute.isString() && $attribute.columnConfig.getSize() > 0)
                    <div class="text-danger mt-1" *ngIf="!${attribute.var}.valid && ${attribute.var}.dirty && ${attribute.var}.errors['maxlength']">
                        $attribute.labels.label deve conter no máximo $attribute.columnConfig.size caractere(s).
                    </div>
#end
#if($attribute.isEmail())
                    <div class="text-danger mt-1" *ngIf="!${attribute.var}.valid && ${attribute.var}.dirty && ${attribute.var}.errors['validateEmail']">
                        $attribute.labels.label valor é inválido para um e-mail.
                    </div>
#end
#if($attribute.isUrl())
                    <div class="text-danger mt-1" *ngIf="!${attribute.var}.valid && ${attribute.var}.dirty && ${attribute.var}.errors['pattern']">
                        $attribute.labels.label valor é inválido para uma URL.
                    </div>
#end
#end
